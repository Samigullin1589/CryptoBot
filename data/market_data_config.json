  "parsing_tasks": [
    {
      "task_id": "scrape_whattomine_asics",
      "description": "Парсит список актуальных ASIC-майнеров с сайта WhatToMine.",
      "enabled": true,
      "source_type": "html_scrape",
      "url": "https://whattomine.com/asics",
      "refresh_interval_hours": 6,
      "parser_config": {
        "table_selector": "table.table-hover > tbody > tr",
        "data_schema": {
          "name": {
            "selector": "td:nth-child(2) > a",
            "type": "text"
          },
          "hashrate": {
            "selector": "td:nth-child(3)",
            "type": "text",
            "regex_extract": "(\\d+\\.?\\d*)"
          },
          "power": {
            "selector": "td:nth-child(4)",
            "type": "text",
            "regex_extract": "(\\d+)"
          }
        }
      }
    },
    {
      "task_id": "scrape_coinmarketcap_new",
      "description": "Парсит список недавно добавленных монет с CoinMarketCap (менее надежный метод).",
      "enabled": true,
      "source_type": "html_scrape",
      "url": "https://coinmarketcap.com/new/",
      "refresh_interval_hours": 1,
      "parser_config": {
        "table_selector": "div.cmc-body-wrapper table > tbody > tr",
        "data_schema": {
          "name": {
            "selector": "td:nth-child(3) p.coin-item-symbol",
            "type": "text"
          },
          "chain": {
            "selector": "td:nth-child(5) p",
            "type": "text"
          },
          "added_date": {
            "selector": "td:nth-child(6)",
            "type": "text"
          }
        }
      }
    },
    {
      "task_id": "fetch_coingecko_new_coins_api",
      "description": "Получает список недавно добавленных монет через официальное API CoinGecko (рекомендуемый, надежный метод).",
      "enabled": true,
      "source_type": "api",
      "url": "https://api.coingecko.com/api/v3/coins/list/new",
      "refresh_interval_hours": 1,
      "parser_config": {
        "data_path": ""
      }
    }
  ]
}
