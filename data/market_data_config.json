  "global_settings": {
    "default_user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/125.0.0.0 Safari/537.36",
    "default_request_timeout_seconds": 30,
    "default_cache_ttl_seconds": 3600
