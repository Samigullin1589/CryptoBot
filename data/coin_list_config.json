{
  "schema_version": "2.0.0",
  "last_updated_utc": "2025-08-05T23:00:00Z",
  "update_policy": {
    "enabled": true,
    "source_url": "https://api.coingecko.com/api/v3/coins/list",
    "update_interval_hours": 24,
    "request_timeout_seconds": 30
