  "fallback_options": {
    "use_fallback_on_api_failure": true,
    "fallback_file_path": "data/fallback_coins.json"
  },
  "health_checks": {
    "enabled": true,
    "check_interval_minutes": 60,
    "max_consecutive_failures": 3
  }
